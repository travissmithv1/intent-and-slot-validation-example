{
  "name": "flight-booking-chatbot",
  "version": "1.0.0",
  "description": "AI-powered flight booking assistant demonstrating Intent and Slot Validation",
  "type": "module",
  "scripts": {
    "start": "tsx src/api/server.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
